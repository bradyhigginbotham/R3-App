function CompetitionsWindow(navGroup){var ListView=require('ui/common/competitions/ListView'),DetailView=require('ui/common/competitions/DetailView');var self=Ti.UI.createWindow({backgroundImage:'images/bg_bigTex.png',title:'Competitions',navBarHidden:false});var listView=new ListView(),detailView=new DetailView();var listContainerWindow=Ti.UI.createWindow({title:'Competitions'});self.add(listView);var detailContainerWindow=Ti.UI.createWindow({title:'Competition Details'});detailContainerWindow.add(detailView);listView.addEventListener('competitionSelected',function(e){detailView.fireEvent('competitionSelected',e);navGroup.open(detailContainerWindow);});return self;}
module.exports=CompetitionsWindow;