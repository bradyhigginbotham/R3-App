function ListView(){var self=Ti.UI.createView({backgroundColor:'white'});var db=Ti.Database.install('db/r3.sqlite','r3.sqlite');var results=[];var resultSet=db.execute('SELECT * FROM speakers ORDER BY name ASC');while(resultSet.isValidRow()){results.push({id:resultSet.fieldByName('id'),title:resultSet.fieldByName('name'),position:resultSet.fieldByName('title'),hasChild:true,className:'speaker',height:40});resultSet.next();}
resultSet.close();var table=Ti.UI.createTableView({data:results});self.add(table);table.addEventListener('click',function(e){self.fireEvent('itemSelected',{name:e.rowData.title,position:e.rowData.position});});return self;};module.exports=ListView;