function subscribeToNotifications(icon,latest){var loading=Ti.UI.createActivityIndicator({height:50,width:50,message:'Subscribing...',style:Ti.UI.iPhone.ActivityIndicatorStyle.BIG});loading.show();var Cloud=require('ti.cloud'),deviceToken;userLogin();function userLogin(){Cloud.Users.login({    login:'default',    password:'r3AITPconference!'},function(e){if(e.success){var user=e.users[0];grabDeviceToken();    }else{loading.hide();loading=null;alert('Failed to register for push notifications! Please check your network or data connection.');    }});}
function grabDeviceToken(){Ti.Network.registerForPushNotifications({    types:[        Ti.Network.NOTIFICATION_TYPE_BADGE,        Ti.Network.NOTIFICATION_TYPE_ALERT,        Ti.Network.NOTIFICATION_TYPE_SOUND
    ],success:function(e){    deviceToken=e.deviceToken;    registerForPush();},error:function(e){loading.hide();loading=null;alert('Failed to register device for push notifications! Please check your network or data connection.');},callback:function(e){var data=JSON.stringify(e.data);var notification=JSON.parse(data);alert('Message received. Please check the announcements.');latest.text="Latest: "+notification.alert;var db=Ti.Database.open('r3.sqlite');db.execute("INSERT INTO announcements (title, announcement, read) VALUES ('"+notification.title+"', '"+notification.alert+"', 0)");db.close();Ti.UI.iPhone.appBadge=Ti.UI.iPhone.getAppBadge()+1;}});}
function registerForPush(){Cloud.PushNotifications.subscribe({    channel:'r3aitp',    device_token:deviceToken,    type:'ios',},function(e){    if(e.success){loading.hide();loading=null;alert('You have subscribed to the R3 Conference notification system!');icon.backgroundImage='/icons/home/unsubscribe.png';var db=Ti.Database.open('r3.sqlite');db.execute("UPDATE user SET subscribed = 1 WHERE username = 'default'");db.close();    }else{loading.hide();loading=null;alert('Failed to register for push notifications! Please check your network or data connection.');    }});}}
function unsubscribeToNotifications(icon){var loading=Ti.UI.createActivityIndicator({height:50,width:50,message:'Unsubscribing...',style:Ti.UI.iPhone.ActivityIndicatorStyle.BIG});loading.show();var Cloud=require('ti.cloud'),deviceToken;userLogin();function userLogin(){Cloud.Users.login({    login:'default',    password:'r3AITPconference!'},function(e){if(e.success){var user=e.users[0];grabDeviceToken();    }else{loading.hide();loading=null;alert('Failed to unsubscribe to push notifications! Please check your network or data connection.');    }});}
function grabDeviceToken(){Ti.Network.registerForPushNotifications({    types:[        Ti.Network.NOTIFICATION_TYPE_BADGE,        Ti.Network.NOTIFICATION_TYPE_ALERT,        Ti.Network.NOTIFICATION_TYPE_SOUND
    ],success:function(e){    deviceToken=e.deviceToken;    registerForPush();},error:function(e){loading.hide();loading=null;alert('Failed to unsubscribe to push notifications! Please check your network or data connection.');}});}
function registerForPush(){Cloud.PushNotifications.unsubscribe({    channel:'r3aitp',    device_token:deviceToken,    type:'ios',},function(e){    if(e.success){loading.hide();loading=null;alert('You have been unsubscribed and will no longer receive conference notifications.');icon.backgroundImage='/icons/home/subscribe.png';var db=Ti.Database.open('r3.sqlite');db.execute("UPDATE user SET subscribed = 0 WHERE username = 'default'");db.close();    }else{loading.hide();loading=null;alert('Failed to unsubscribe to push notifications! Please check your network or data connection.');    }});}}
exports.subscribeToNotifications=subscribeToNotifications;exports.unsubscribeToNotifications=unsubscribeToNotifications;